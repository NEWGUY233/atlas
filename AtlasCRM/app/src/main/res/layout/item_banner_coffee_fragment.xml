<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="180dp">

    <com.dd.ShadowLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:sl_cornerRadius="5dp"
        app:sl_dx="2dp"
        app:sl_dy="2dp"
        app:sl_shadowColor="#3ff2f2f2">

        <tangxiaolv.com.library.EffectiveShapeView
            android:id="@+id/banner_iv_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:shape="round_rectangle" />

        <ImageView
            android:id="@+id/banner_iv_ic_play"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_play"
            android:visibility="gone" />
    </com.dd.ShadowLayout>


    <TextView
        android:id="@+id/banner_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_rectangle_with_stroke"
        android:paddingLeft="48dp"
        android:paddingRight="48dp"
        android:text="@string/text_10"
        android:textColor="@color/white_color" />

</RelativeLayout>
    
    
    
