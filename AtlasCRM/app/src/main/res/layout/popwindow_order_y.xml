<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="40dp"
        android:background="@drawable/bg_circular_s">

        <RelativeLayout
            android:id="@+id/lr_header"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <TextView
                android:id="@+id/tv_title_consignee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/text_38"
                android:textSize="16sp" />

            <Button
                android:id="@+id/bt_not_use_coupon"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/back_gauge_standard"
                android:background="@drawable/button_yellow"
                android:text="@string/no_user" />
        </RelativeLayout>


        <View
            android:id="@+id/v_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/lr_header"
            android:layout_marginBottom="@dimen/back_gauge_standard"
            android:background="@color/divider_gray" />

        <ListView
            android:id="@+id/mylist"
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/v_line"
            android:background="@color/white_color"
            android:divider="@color/divider_gray"
            android:dividerHeight="1dp"
            android:paddingLeft="@dimen/back_gauge_standard"></ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@id/mylist"
            android:background="@drawable/button_cor_btm_gray"></LinearLayout>
    </RelativeLayout>


</RelativeLayout>
