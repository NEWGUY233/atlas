<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:background="@color/bg_gray"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/back_gauge_big"
        android:text="@string/your_current_location"
        android:textColor="@color/gray_simple" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_hight_big"
        android:background="@color/white_color"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_current_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/back_gauge_big"
            android:background="@drawable/flow_selected"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:textColor="@color/white_color" />

        <TextView
            android:id="@+id/tv_current_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/back_gauge_big"
            android:text="gaun"
            android:textColor="@color/gray_simple" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:background="@color/bg_gray"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/back_gauge_big"
        android:text="@string/select_center"
        android:textColor="@color/gray_simple" />


</LinearLayout>