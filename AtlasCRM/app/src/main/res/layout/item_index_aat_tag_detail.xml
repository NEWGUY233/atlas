<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="3dp"
    app:cardElevation="1dp"
    android:layout_marginBottom="12dp"
    app:cardUseCompatPadding="true"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_bg"
            android:background="#FF00BCD5"
            android:paddingTop="9dp"
            android:paddingBottom="8dp"
            android:paddingRight="14dp"
            android:paddingLeft="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.atlas.crmapp.widget.CircleImageView
                android:id="@+id/iv_icon"
                android:layout_centerVertical="true"
                android:src="@color/gray"
                android:layout_marginRight="8dp"
                android:layout_width="24dp"
                android:layout_height="24dp" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_toRightOf="@id/iv_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="欧阳宝宝"
                android:singleLine="true"
                android:textColor="#FFFFFFFF"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/tv_company"
                android:layout_toRightOf="@id/iv_icon"
                android:layout_below="@id/tv_name"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:ellipsize="middle"
                android:layout_height="wrap_content"
                android:text="寰图体育中国股…份有限公司"
                android:textColor="#FFFFFFFF"
                android:textSize="8sp"
                />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_show"
            android:paddingTop="13dp"
            android:minHeight="74dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_content"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:layout_width="match_parent"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:text="先看下自己会啥！多学点吧！现在都要求全能"
                android:textColor="#FF2B3039"
                android:textSize="14sp"
                />

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_arrows"
                android:layout_gravity="right"
                android:background="@color/gray"
                android:src="@drawable/ic_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="22dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_time"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18-03-23"
                android:textColor="#FF939393"
                android:textSize="8sp"
                />

            <ImageView
                android:id="@+id/iv_like"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/icon_like_sel"
                android:layout_centerVertical="true"
                android:layout_width="24dp"
                android:layout_height="24dp" />


            <TextView
                android:id="@+id/tv_like_num"
                android:gravity="center"
                android:layout_marginRight="6dp"
                android:layout_alignParentRight="true"
                android:layout_width="22dp"
                android:layout_height="16dp"
                android:text="1"
                android:textColor="#FF2B3039"
                android:textSize="10sp"
                />
            
        </RelativeLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>
