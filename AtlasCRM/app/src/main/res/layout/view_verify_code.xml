<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <EditText
        android:paddingTop="8dp"
        android:id="@+id/etCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/please_input_code"
        android:inputType="number"
        android:background="@null"
        android:maxLength="4"
        android:textColor="#FF2B3039"
        android:textSize="@dimen/text_big" />

    <TextView
        android:visibility="gone"
        android:layout_marginLeft="0dp"
        android:id="@+id/tv_code_1"
        style="@style/PhoneCode"
        android:textSize="@dimen/text_large" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_code_2"
        style="@style/PhoneCode"
        android:layout_toRightOf="@id/tv_code_1"
        android:textSize="@dimen/text_large" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_code_3"
        style="@style/PhoneCode"
        android:layout_toRightOf="@id/tv_code_2"
        android:textSize="@dimen/text_large" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_code_4"
        style="@style/PhoneCode"
        android:layout_toRightOf="@id/tv_code_3"
        android:textSize="@dimen/text_large" />
    <View
        android:layout_marginTop="8dp"
        android:layout_below="@id/etCode"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_gray" />

</RelativeLayout>