<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="14dp"
    android:paddingBottom="6dp"
    android:background="@color/bg_gray"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/time"
        android:background="@drawable/bg_grey_chat_time"
        android:layout_marginBottom="13dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="9dp"
        android:paddingRight="9dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text="04-05 16:32 "
        android:textColor="#FFFFFFFF"
        android:textSize="11sp"
        />

    <LinearLayout
        android:id="@+id/ll_cus"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.atlas.crmapp.widget.CircleImageView
            android:id="@+id/icon"
            android:layout_marginLeft="14dp"
            android:src="@mipmap/icon_informationheard"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <LinearLayout
            android:background="@mipmap/pic_talk_bg_white"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_cus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="249dp"
                android:paddingBottom="12dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="12dp"
                android:text=""
                android:textColor="#FF4A4A4A"
                android:textSize="15sp"
                android:visibility="gone" />

            <ImageView
                android:maxWidth="249dp"
                android:visibility="gone"
                android:layout_margin="2dp"
                android:id="@+id/iv_cus"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_voice_cus"
                android:src="@drawable/voice_anim_cus"
                android:paddingLeft="20dp"
                android:paddingRight="100dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />

        </LinearLayout>

        <TextView
            android:layout_marginRight="52dp"
            android:id="@+id/tv_time_cus"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/dialog_outside_bg"
            android:textSize="15sp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_mine"
        android:layout_gravity="right"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="100dp"
            android:id="@+id/tv_time_mine"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/dialog_outside_bg"
            android:textSize="15sp"
            />

        <LinearLayout
            android:layout_marginRight="15dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="right"
            android:background="@mipmap/pic_talk_bg_orage"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:maxWidth="249dp"
                android:visibility="gone"
                android:id="@+id/tv_mine"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingRight="14dp"
                android:paddingLeft="14dp"
                android:text="你总是心太软，心太软，把所有问题，都自己砍"
                android:textColor="#FF4A4A4A"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:maxWidth="249dp"
                android:visibility="gone"
                android:layout_margin="2dp"
                android:id="@+id/iv_mine"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_voice_mine"
                android:src="@drawable/voice_anim_mine"
                android:paddingLeft="100dp"
                android:paddingRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
