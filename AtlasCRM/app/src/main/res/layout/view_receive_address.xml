<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="70dp"
    android:paddingLeft="@dimen/back_gauge_big"
    android:paddingRight="@dimen/back_gauge_big"
    android:background="@color/white_color">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="陈明珠"
            android:textSize="16sp"
            android:layout_marginTop="@dimen/back_gauge_big"
            android:layout_alignParentTop="true"
            />
        <ImageView
            android:id="@+id/iv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:scaleType="centerInside"
            android:layout_marginTop="@dimen/back_gauge_big"
            android:layout_alignLeft="@id/tv_name"
            android:src="@drawable/ic_location_gray" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_title_addr"
            android:layout_below="@id/tv_title_addr"
            android:layout_marginLeft="@dimen/back_gauge_standard"
            android:layout_alignBottom="@id/iv_location"
            android:layout_toRightOf="@id/iv_location"
            android:text="广东省广州市天河区华夏路"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:background="@drawable/ic_next" />
        <TextView
            android:id="@+id/tv_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_marginRight="@dimen/back_gauge_standard"
            android:maxLines="1"
            android:layout_toLeftOf="@id/iv_next"
            android:text="138****8888"
            android:textSize="16sp"
            android:layout_centerVertical="true"
             />

</RelativeLayout>