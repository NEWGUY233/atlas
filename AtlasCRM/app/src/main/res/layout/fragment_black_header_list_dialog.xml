<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.atlas.crmapp.usercenter.MyCompanyActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/back_gauge_large"
        android:layout_marginRight="@dimen/back_gauge_large"
        android:background="@drawable/layout_code">

        <TextView
            android:id="@+id/tv_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_hight_big"
            android:background="@drawable/layout_find"
            android:gravity="center"
            android:text="@string/company_list"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/text_big" />

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:layout_below="@id/tv_header"></ListView>
    </RelativeLayout>
</RelativeLayout>