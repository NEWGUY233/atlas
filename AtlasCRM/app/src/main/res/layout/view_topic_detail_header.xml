<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:onClick="hideKeyboard"
    android:orientation="vertical">

    <tangxiaolv.com.library.EffectiveShapeView
        android:id="@+id/shape_iv"
        style="@style/BigBannerImage" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_color"
        android:orientation="vertical"
        android:paddingLeft="@dimen/back_gauge_big"
        android:paddingRight="@dimen/back_gauge_big"
        android:paddingBottom="@dimen/back_gauge_standard"
        android:paddingTop="@dimen/back_gauge_large"
        >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="标题"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/text_big" />

        <TextView
            android:id="@+id/tv_sub_title"
            style="@style/TopicAndActivitiesContent"
            android:text="内容" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/back_gauge_standard"
            android:orientation="horizontal"
            android:gravity="right"
            android:paddingLeft="4dp"
            android:paddingRight="4dp">

            <TextView
                android:id="@+id/tv_num_comment"
                style="@style/TopicAndActivitiesTimePlace"
                android:drawableLeft="@drawable/ic_comment"
                android:text="0" />

            <TextView
                android:id="@+id/tv_num_like"
                style="@style/TopicAndActivitiesTimePlace"
                android:layout_marginLeft="@dimen/back_gauge_large"
                android:drawableLeft="@drawable/ic_like_unselect"
                android:text="0" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/back_gauge_big"
        android:background="@color/bg_gray" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/back_gauge_big"
        android:background="@color/white_color" />

</LinearLayout>
