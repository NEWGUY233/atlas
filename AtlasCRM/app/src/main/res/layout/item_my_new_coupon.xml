<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_coupon"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginTop="@dimen/back_gauge_standard"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_coupon_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/button_yellow" />

    <ImageView
        android:id="@+id/iv_coupon_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

    <RelativeLayout
        android:id="@+id/rl_coupon_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/back_gauge_huge">

        <TextView
            android:id="@+id/tv_coupon_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/white_color" />


        <TextView
            android:id="@+id/tv_coupon_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_coupon_type"
            android:layout_marginTop="@dimen/back_gauge_big"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="200dp"
            android:text=""
            android:textColor="@color/white_color"
            android:textSize="18sp" />

    </RelativeLayout>

    <View
        android:id="@+id/v_span"
        android:layout_width="2dp"
        android:layout_height="1dp"
        android:layout_alignTop="@id/rl_coupon_left" />

    <TextView
        android:id="@+id/v_line"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_alignLeft="@id/rl_coupon_left"
        android:layout_alignRight="@id/rl_coupon_left"
        android:layout_below="@id/v_span"
        android:layout_marginTop="24dp"
        android:background="@color/divider_gray"></TextView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/rl_coupon_left"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/rl_coupon_left"
        android:layout_marginRight="@dimen/back_gauge_big">

        <TextView
            android:id="@+id/tv_valid_end_day_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/coupon_day_bg"
            android:text="剩122天"
            android:layout_alignParentRight="true"
            android:textColor="@color/white_color" />
        <TextView
            android:id="@+id/tv_can_user_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="数量：10 "
            android:layout_alignParentRight="true"
            android:textColor="@color/white_color"
            android:textSize="@dimen/text_big" />

    </RelativeLayout>


</RelativeLayout>