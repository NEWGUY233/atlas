<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">


    <LinearLayout
        android:visibility="gone"
        android:paddingTop="10dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingBottom="14dp"
        android:orientation="vertical"
        android:id="@+id/ll_type_1"
        android:layout_marginTop="8dp"
        android:background="#FFF9F9F9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/type1_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FF2B3039"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/type1_content"
            android:maxLines="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FF939393"
            android:textSize="14sp"
            />
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:paddingTop="9dp"
        android:paddingLeft="8dp"
        android:paddingRight="16dp"
        android:paddingBottom="9dp"
        android:orientation="horizontal"
        android:id="@+id/ll_type_2"
        android:layout_marginTop="8dp"
        android:background="#FFF9F9F9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="46dp"
            app:cardCornerRadius="1dp"
            android:layout_height="46dp"
            app:cardElevation="0dp"
            >
            <ImageView
                android:id="@+id/type2_pic"
                android:src="#e5e5e5"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/type2_title"
            android:layout_marginLeft="9dp"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FF2B3039"
            android:textSize="14sp"
            />
    </LinearLayout>

    <RelativeLayout
        android:visibility="gone"
        android:paddingTop="10dp"
        android:paddingLeft="8dp"
        android:paddingRight="14dp"
        android:paddingBottom="14dp"
        android:orientation="vertical"
        android:id="@+id/ll_type_3"
        android:layout_marginTop="8dp"
        android:background="#FFF9F9F9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <ImageView
            android:layout_marginRight="8dp"
            android:id="@+id/type3_pic"
            android:layout_width="46dp"
            android:layout_height="46dp" />

        <TextView
            android:layout_toRightOf="@id/type3_pic"
            android:id="@+id/type3_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FF2B3039"
            android:textSize="16sp"
            />

        <TextView
            android:layout_toRightOf="@id/type3_pic"
            android:layout_below="@id/type3_title"
            android:id="@+id/type3_content"
            android:maxLines="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FF939393"
            android:textSize="14sp"
            />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/rcv_pic"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>


</LinearLayout>
