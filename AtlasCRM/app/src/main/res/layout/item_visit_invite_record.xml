<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/back_gauge_small"
    android:layout_marginRight="@dimen/back_gauge_small"
    android:layout_marginTop="@dimen/back_gauge_standard"
    android:layout_marginBottom="@dimen/back_gauge_standard"
    android:orientation="vertical"
    app:cardCornerRadius="5dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_visit_date_colon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="25dp"
            android:text="@string/visit_date_colon" />


        <TextView
            android:id="@+id/tv_visit_num_colon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_visit_date_colon"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"
            android:text="@string/visit_num_colon" />


        <TextView
            android:id="@+id/tv_visit_unit_colon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_visit_date_colon"
            android:layout_below="@id/tv_visit_date_colon"
            android:layout_marginTop="@dimen/back_gauge_standard"
            android:text="@string/visit_unit_colon" />


        <TextView
            android:id="@+id/tv_visit_purpose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_visit_date_colon"
            android:layout_below="@id/tv_visit_unit_colon"
            android:layout_marginTop="@dimen/back_gauge_standard"
            android:text="@string/visit_purpose_colon"
            android:textColor="@color/gray_simple" />


        <TextView
            android:id="@+id/tv_visit_purpose_colon"
            android:layout_width="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="@dimen/back_gauge_large"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_visit_purpose"
            android:layout_marginBottom="24dp"
            android:layout_toRightOf="@id/tv_visit_purpose" />


        <RelativeLayout
            android:id="@+id/rl_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_hight"
            android:layout_below="@id/tv_visit_purpose_colon">

            <View
                android:id="@+id/v_line"
                style="@style/devide_line" />

            <TextView
                android:id="@+id/tv_send_or_actual_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24dp"
                android:textColor="@color/gray_simple" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_arr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="24dp"
                android:src="@drawable/ic_user_arrow_right" />

        </RelativeLayout>


    </RelativeLayout>


</android.support.v7.widget.CardView>