<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_color"
    android:padding="16dp">



    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_toLeftOf="@+id/ll_counter"
        android:layout_toRightOf="@id/shape_iv"
        android:textColor="@color/primary_text_drak"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="18sp"
        android:text="英式下午茶"/>

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/shape_iv"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/shape_iv"
        android:textColor="@color/red"
        android:textSize="24sp"
        android:text="￥30"/>

    <TextView
        android:id="@+id/tv_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_price"
        android:layout_alignBaseline="@id/tv_price"
        android:layout_marginLeft="4dp"
        android:textSize="14sp"
        android:text="/份"/>

    <LinearLayout
        android:id="@+id/ll_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv_price"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_sub"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="@dimen/back_gauge_small"
            android:src="@drawable/ic_btn_sub_normal"/>

        <TextView
            android:id="@+id/tv_item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textSize="16sp"
            android:text="1"/>

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="@dimen/back_gauge_small"
            android:src="@drawable/ic_btn_add_normal"/>

    </LinearLayout>


</RelativeLayout>
