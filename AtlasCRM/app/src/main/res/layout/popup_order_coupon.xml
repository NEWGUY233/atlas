<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_order_coupon_dismiss"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/popup_bg">

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_gray"
            android:clickable="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_hight_big"
                android:background="@color/btn_yellow"
                android:gravity="center"
                android:text="@string/text_38"
                android:textSize="@dimen/text_big" />

            <ListView
                android:id="@+id/mylist"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/tv_title"
                android:background="@color/bg_gray"
                android:divider="@android:color/transparent"
                android:dividerHeight="0dp"></ListView>

            <View
                style="@style/devide_line"
                android:layout_marginLeft="@dimen/back_gauge_standard"
                android:layout_marginRight="@dimen/back_gauge_standard" />

            <TextView
                android:id="@+id/bt_not_use_coupon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_hight"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:text="@string/text_39"
                android:textColor="@color/gray_simple"
                android:textSize="@dimen/text_big" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
