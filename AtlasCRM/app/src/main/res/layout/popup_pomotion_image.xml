<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_click_dismiss_promotion"
    android:layout_width="match_parent"
    android:background="@color/popup_bg"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            app:cardBackgroundColor="@color/transparent_color"
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:layout_marginTop="40dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp">

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/iv_promotion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </android.support.v7.widget.CardView>

        <ImageView
            android:id="@+id/iv_close"
            android:padding="@dimen/back_gauge_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v_card"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/popu_close_margin_top"
            android:src="@drawable/btn_close" />

    </LinearLayout>


</RelativeLayout>