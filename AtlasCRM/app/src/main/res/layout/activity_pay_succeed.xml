<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.atlas.crmapp.coffee.PaySucceedActivity">

    <include
        android:id="@+id/include_title"
        layout="@layout/titlebar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_color"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="56dp"
            app:srcCompat="@drawable/ic_pay_success" />

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="0.01"
            android:textAlignment="center"
            android:textColor="@color/red"
            android:textSize="20sp"
            android:visibility="gone" />


        <TextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/back_gauge_huge"
            android:text="@string/complete_order"
            android:textSize="@dimen/text_big_large" />


        <Button
            android:id="@+id/btn_complete"
            style="@style/SubmitButtonLeftRight"
            android:layout_marginTop="80dp"
            android:text="@string/complete" />

        <Button
            android:id="@+id/btn_order"
            style="@style/SubmitButtonLeftRight"
            android:layout_marginTop="16dp"
            android:text="@string/check_order" />

    </LinearLayout>

</LinearLayout>
