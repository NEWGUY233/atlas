<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_find_msg_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/back_gauge_small"
    android:layout_marginLeft="@dimen/back_gauge_standard"
    android:layout_marginRight="@dimen/back_gauge_standard"
    android:layout_marginTop="@dimen/back_gauge_small"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/btn_yellow"
    app:cardCornerRadius="5dp"
    app:cardElevation="0dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/white_color">

        <com.atlas.crmapp.widget.CircleImageView
            android:id="@+id/iv_real_msg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/back_gauge_large"
            android:layout_marginRight="@dimen/back_gauge_large"
            android:layout_marginTop="@dimen/back_gauge_large"
            android:src="@drawable/ic_find_coupon" />


        <RelativeLayout
            android:id="@+id/rl_msg_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/back_gauge_standard"
            android:layout_marginTop="@dimen/back_gauge_standard"
            android:layout_toRightOf="@id/iv_real_msg"
            android:paddingLeft="@dimen/back_gauge_standard"
            android:paddingRight="@dimen/back_gauge_standard"
            android:paddingTop="@dimen/back_gauge_small">

            <TextView
                android:id="@+id/tv_msg_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/text_small" />

            <com.atlas.crmapp.view.CheckOverSizeTextView
                android:id="@+id/tv_msg_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_msg_title"
                android:layout_marginBottom="@dimen/back_gauge_small"
                android:layout_marginRight="@dimen/back_gauge_large"
                android:layout_marginTop="@dimen/back_gauge_small"
                android:ellipsize="end"
                android:maxLines="1"
                android:tag="1"
                android:textColor="@color/gray_simple"
                android:textSize="@dimen/text_small" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_msg_message"
                android:text="2018.09.20"
                android:paddingBottom="@dimen/back_gauge_small"
                android:textColor="@color/gray_simple"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_show_hide_text"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_alignBottom="@id/tv_time"
                android:layout_alignParentRight="true"
                android:paddingRight="@dimen/back_gauge_big"
                android:gravity="bottom|right"
                android:paddingBottom="@dimen/back_gauge_small"
                android:text="@string/show_all_text"
                android:textColor="@color/gray_simple"
                android:textSize="10sp"
                 />
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/rl_msg_info"
            android:layout_alignTop="@id/rl_msg_info"
            android:layout_toRightOf="@id/iv_real_msg"
            android:background="@color/bg_gray" />
    </RelativeLayout>


</android.support.v7.widget.CardView>