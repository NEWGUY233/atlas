<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:clipChildren="false"
    android:layout_height="48dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:clipChildren="false"
        android:layout_height="match_parent">

        <ImageView
            android:layout_gravity="bottom"
            android:scaleType="fitCenter"
            android:background="@mipmap/bg_menu_iconbg"
            android:layout_width="match_parent"
            android:layout_height="65dp" />
    </LinearLayout>

    <LinearLayout
        android:clipChildren="false"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/bn_fl_workplace"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/bn_iv_workplace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:src="@mipmap/menu_icon_workspace_normal" />

            <TextView
                android:id="@+id/unread_wp_number"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignTop="@+id/bn_iv_workplace"
                android:layout_toRightOf="@+id/bn_iv_workplace"
                android:background="@drawable/em_unread_dot"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bn_fl_livingspace"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/bn_iv_livingspace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:src="@mipmap/menu_icon_livingspace_normal" />

            <TextView
                android:id="@+id/unread_lp_number"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignTop="@+id/bn_iv_livingspace"
                android:layout_toRightOf="@+id/bn_iv_livingspace"
                android:background="@drawable/em_unread_dot"
                android:visibility="gone" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/bn_fl_index"
            android:clipChildren="false"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/bn_iv_index"
                android:layout_gravity="bottom"
                android:scaleType="fitCenter"
                android:src="@mipmap/menu_icon_home_noraml"
                android:layout_width="match_parent"
                android:layout_height="58dp" />

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/bn_fl_communication"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/bn_iv_communication"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:src="@mipmap/menu_icon_community_normal" />

            <TextView
                android:layout_marginTop="-5dp"
                android:id="@+id/unread_cm_number"
                android:background="@drawable/bg_red_circle"
                android:layout_width="14dp"
                android:gravity="center"
                android:layout_height="14dp"
                android:layout_marginLeft="-7dp"
                android:textColor="#FFFFFFFF"
                android:textSize="8sp"
                android:layout_alignTop="@+id/bn_iv_communication"
                android:layout_toRightOf="@+id/bn_iv_communication"
                android:visibility="gone" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/bn_fl_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/bn_iv_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:src="@mipmap/menu_icon_me_normal" />

            <TextView
                android:id="@+id/unread_mine_number"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignTop="@+id/bn_iv_mine"
                android:layout_toRightOf="@+id/bn_iv_mine"
                android:background="@drawable/em_unread_dot"
                android:visibility="gone" />

        </RelativeLayout>



    </LinearLayout>
</RelativeLayout>
