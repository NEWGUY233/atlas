<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_color"
    android:orientation="vertical"
    android:paddingBottom="@dimen/back_gauge_big"
    android:paddingTop="@dimen/back_gauge_big">

    <TextView
        android:id="@+id/tv_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/back_gauge_big"
        android:text="广州"
        android:textColor="@color/gray_simple" />


    <com.atlas.crmapp.view.FlowLayout
        android:id="@+id/fl_center"
        android:layout_marginTop="@dimen/back_gauge_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/back_gauge_small"
        android:layout_marginRight="@dimen/back_gauge_small"
        app:flow_selected="@drawable/bg_left_right_circle_yellow"
        app:flow_un_selected="@drawable/flow_un_selected">


    </com.atlas.crmapp.view.FlowLayout>
</LinearLayout>