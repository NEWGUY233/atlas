<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:paddingLeft="18dp"
        android:paddingRight="19dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="57dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_height="57dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/corporation_1_1"
                android:textColor="#FF2B3039"
                android:textSize="14sp"
                />
            <TextView
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/corporation_1_2"
                android:textColor="#FF939393"
                android:textSize="10sp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_big"
            android:gravity="right"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#FFF57754"
            android:textSize="18sp"
            />
    </LinearLayout>

    <View
        android:layout_marginLeft="18dp"
        android:layout_marginRight="19dp"
        android:background="@color/bg_gray"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <LinearLayout
        android:paddingLeft="18dp"
        android:paddingRight="19dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="57dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_height="57dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/corporation_2_1"
                android:textColor="#FF2B3039"
                android:textSize="14sp"
                />
            <TextView
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/corporation_1_2"
                android:textColor="#FF939393"
                android:textSize="10sp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_small"
            android:gravity="right"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#FFF57754"
            android:textSize="18sp"
            />
    </LinearLayout>

    <View
        android:layout_marginLeft="18dp"
        android:layout_marginRight="19dp"
        android:background="@color/bg_gray"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <LinearLayout
        android:paddingLeft="18dp"
        android:paddingRight="19dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="57dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_height="57dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/corporation_3_1"
                android:textColor="#FF2B3039"
                android:textSize="14sp"
                />
            <TextView
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/corporation_2_2"
                android:textColor="#FF939393"
                android:textSize="10sp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_print"
            android:gravity="right"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#FFF57754"
            android:textSize="18sp"
            />
    </LinearLayout>

    <View
        android:layout_marginLeft="18dp"
        android:layout_marginRight="19dp"
        android:background="@color/bg_gray"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

</LinearLayout>
