<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#00000000"
    android:layout_marginTop="18dp"
    android:layout_height="48dp">

    <TextView
        android:gravity="center"
        android:layout_centerInParent="true"
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/index_living_space"
        android:textAlignment="center"
        android:textSize="18sp" />

    <ImageView
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:id="@+id/iv_box"
        style="@style/normal_bottom"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_weight="0"
        android:padding="@dimen/back_gauge_standard"
        android:src="@mipmap/nav_icon_magicbox" />

    <com.airbnb.lottie.LottieAnimationView
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_marginLeft="13dp"
        android:id="@+id/anim_plus"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:paddingTop="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp"
        android:scaleType="fitCenter"
        app:lottie_autoPlay="false"
        app:lottie_fileName="movin_plus.json"
        app:lottie_loop="false" />


    <ImageView
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:id="@+id/iv_code"
        style="@style/normal_bottom"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="16dp"
        android:layout_weight="0"
        android:padding="@dimen/back_gauge_standard"
        android:src="@mipmap/nav_icon_qr" />

    <ImageView
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/iv_code"
        android:id="@+id/iv_scan_to_scan"
        style="@style/normal_bottom"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_weight="0"
        android:padding="@dimen/back_gauge_standard"
        android:src="@mipmap/nav_icon_scan" />

    <View
        android:background="#FFEEF1F3"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</RelativeLayout>
