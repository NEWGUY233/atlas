<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <com.liaoinstan.springview.widget.SpringView
        android:id="@+id/springView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:descendantFocusability="blocksDescendants"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:scaleType="centerCrop"
                    android:id="@+id/iv_bg"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="17dp"
                    android:layout_marginLeft="18dp"
                    android:src="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="190dp" />

                <TextView
                    android:id="@+id/tv_question"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_below="@id/iv_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FF2B3039"
                    android:textSize="15sp"
                    />

                <TextView
                    android:layout_marginRight="18dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="16dp"
                    android:id="@+id/tv_content"
                    android:layout_below="@id/tv_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FF2B3039"
                    android:textSize="15sp"
                    />

                <LinearLayout
                    android:id="@+id/ll_1"
                    android:layout_marginTop="17dp"
                    android:layout_marginLeft="17dp"
                    android:layout_below="@id/tv_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/from_circle"
                        android:textColor="#FF939393"
                        android:textSize="10sp"
                        />

                    <TextView
                        android:id="@+id/tv_tag"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp"
                        android:background="@drawable/bg_yellow_index_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#FFFFFFFF"
                        android:textSize="10sp"
                        />
                </LinearLayout>

                <View
                    android:id="@+id/line1"
                    android:layout_marginTop="16dp"
                    android:layout_below="@id/ll_1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#FFF4F4F4"
                    />

                <LinearLayout
                    android:id="@+id/ll_2"
                    android:layout_below="@id/line1"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="41dp">

                    <LinearLayout
                        android:id="@+id/ll_comment"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@mipmap/question_icon_comment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/comment"
                            android:textColor="#FF939393"
                            android:textSize="12sp"
                            />
                    </LinearLayout>

                    <View
                        android:layout_gravity="center_vertical"
                        android:layout_width="1dp"
                        android:layout_height="15dp"
                        android:background="#FFF1F1F1"
                        />

                    <LinearLayout
                        android:id="@+id/ll_collect"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/iv_focus"
                            android:src="@mipmap/question_icon_collection"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_focus"
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/follow"
                            android:textColor="#FF939393"
                            android:textSize="12sp"
                            />
                    </LinearLayout>

                    <View
                        android:layout_gravity="center_vertical"
                        android:layout_width="1dp"
                        android:layout_height="15dp"
                        android:background="#FFF1F1F1"
                        />

                    <LinearLayout
                        android:id="@+id/ll_share"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@mipmap/question_icon_share"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/share"
                            android:textColor="#FF939393"
                            android:textSize="12sp"
                            />
                    </LinearLayout>

                </LinearLayout>


                <View
                    android:id="@+id/line2"
                    android:layout_below="@id/ll_2"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="#FFF4F4F4"
                    />

                <LinearLayout
                    android:id="@+id/ll_3"
                    android:layout_below="@id/line2"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:layout_height="45dp">

                    <TextView
                        android:id="@+id/all_comment"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="17dp"
                        android:text="@string/all_comment"
                        android:textColor="#FF2B3039"
                        android:textSize="12sp"
                        />

                    <TextView
                        android:id="@+id/tv_hot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hottest"
                        android:textColor="#FF2B3039"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="|"
                        android:textColor="#FF2B3039"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:id="@+id/tv_new"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/newest"
                        android:textColor="#FF939393"
                        android:textSize="12sp"
                        />
                </LinearLayout>

                <View
                    android:id="@+id/line3"
                    android:layout_below="@id/ll_3"
                    android:layout_width="375dp"
                    android:layout_height="1dp"
                    android:background="#FFF4F4F4"
                    />

                <android.support.v7.widget.RecyclerView
                    android:paddingLeft="12.5dp"
                    android:paddingRight="12.5dp"
                    android:paddingTop="16dp"
                    android:id="@+id/recyclerView"
                    android:layout_below="@id/line3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

            </RelativeLayout>


        </ScrollView>
    </com.liaoinstan.springview.widget.SpringView>
</LinearLayout>
