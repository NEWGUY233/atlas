<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_color">

    <tangxiaolv.com.library.EffectiveShapeView
        android:id="@+id/shape_iv"
        android:layout_width="96dp"
        android:layout_height="72dp"
        android:layout_margin="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/product"
        app:shape="round_rectangle"/>

    <View
        style="@style/DividerHorizontal"
        android:layout_below="@id/shape_iv"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="寰图咖啡(广州·雅居乐)"
        android:layout_toRightOf="@id/shape_iv"
        android:layout_alignTop="@id/shape_iv"
        android:textColor="@color/primary_text_drak"
        android:singleLine="true"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;50m"
        android:layout_toRightOf="@id/tv_name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_alignTop="@id/tv_name"
        android:layout_alignBottom="@id/tv_name"
        android:gravity="center_vertical|right"/>

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="电话:020-8388 8888"
        android:layout_below="@id/tv_name"
        android:layout_alignLeft="@id/tv_name"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/tv_addr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="广州天河区华夏路"
        android:layout_below="@id/tv_phone"
        android:layout_alignLeft="@id/tv_name"
        android:layout_alignBottom="@id/shape_iv"
        android:gravity="bottom"/>

</RelativeLayout>