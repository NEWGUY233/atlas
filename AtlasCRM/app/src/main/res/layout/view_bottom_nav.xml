<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:background="@color/white_color"
        android:orientation="horizontal"
        android:weightSum="6">

        <RelativeLayout
            android:id="@+id/bn_fl_ecosphere"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/bn_iv_ecosphere"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:src="@drawable/selector_ic_ecosphere" />


            <TextView
                android:id="@+id/unread_msg_number"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignTop="@+id/bn_iv_ecosphere"
                android:layout_toRightOf="@+id/bn_iv_ecosphere"
                android:background="@drawable/em_unread_dot"
                android:visibility="gone" />

        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="2" />

        <RelativeLayout
            android:id="@+id/bn_fl_user"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/bn_iv_user"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:src="@drawable/selector_ic_user" />

            <ImageView
                android:id="@+id/iv_user_red_dot"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignTop="@+id/bn_iv_user"
                android:layout_toRightOf="@+id/bn_iv_user"
                android:background="@drawable/em_unread_dot"
                android:visibility="gone" />


        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/bn_iv_wheel_menu_trigger"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="6dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_bottom_nav_wheel_select" />

</FrameLayout>