<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/bg_coupon_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/back_gauge_large"
            android:layout_marginRight="@dimen/back_gauge_large"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
             />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/bg_coupon_detail"
            android:layout_alignLeft="@id/bg_coupon_detail"
            android:layout_alignRight="@id/bg_coupon_detail"
            android:layout_alignTop="@id/bg_coupon_detail"
            android:clickable="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_coupon_detail_cancel"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:background="@null"
                    android:gravity="bottom|center_horizontal"
                    android:text="@string/cancel"
                    android:textColor="@color/white_color" />

                <TextView
                    android:id="@+id/tv_coupon_detail_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textAlignment="center"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/text_big" />

                <TextView
                    android:id="@+id/tv_coupon_detail_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/back_gauge_small"
                    android:text="huge sub title"
                    android:textAlignment="center"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/text_large" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_qrcode"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_meeting_pruduct" />

                <TextView
                    android:id="@+id/tv_coupon_detail_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_qrcode"
                    android:gravity="center"
                    android:text="date"
                    android:layout_marginTop="@dimen/back_gauge_large"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/text_standard" />

                <TextView
                    android:id="@+id/tv_coupon_detail_hint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_coupon_detail_date"
                    android:layout_marginBottom="@dimen/back_gauge_large"
                    android:layout_marginTop="@dimen/back_gauge_small"
                    android:text="@string/show_scan"
                    android:textAlignment="center"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/text_standard" />
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
